# ---------------------
# Bot logic
# ---------------------
def add_bot(text: str):
    st.session_state.messages.append({"role": "bot", "text": text})

def add_user(text: str):
    st.session_state.messages.append({"role": "user", "text": text})

def friendly_error():
    add_bot("Sorry, I couldn‚Äôt complete that request. Please rephrase or try again.")

if submitted and user_text.strip():
    add_user(user_text.strip())

    # If we have a pending preview and user says Yes/Confirm ‚Üí execute
    lower = user_text.strip().lower()
    if st.session_state.pending_preview and any(k in lower for k in ["yes", "confirm", "proceed", "go ahead", "do the changes", "yes do the changes"]):
        prev = st.session_state.pending_preview
        try:
            result = odata_post_confirm(prev["action"], prev["service"], prev["entity"], prev["key_fields"], prev["payload"])
            add_bot("‚úÖ Changes executed successfully.")
            st.markdown("<div class='preview-card'><span class='badge'>Executed</span><small class='mono'>POST confirmed to backend</small></div>", unsafe_allow_html=True)
            st.session_state.pending_preview = None
        except Exception:
            friendly_error()
    else:
        # Normal flow
        try:
            if st.session_state.nlp_mode:
                # Send to NLP chat endpoint; preview-first behavior is handled by the backend
                resp = chat_api(user_text, preview_only=True, confirm=False)
                stage = resp.get("stage")

                if stage == "general":
                    # Use the dedicated general chat endpoint for general replies
                    g = chat_api_general(user_text)
                    add_bot(g.get("result", {}).get("text", "üí¨ (no response)"))

                elif stage == "get":
                    add_bot("Here‚Äôs what I found.")
                    st.markdown(f"<div class='preview-card'><small class='mono'>{json.dumps(resp.get('result'), ensure_ascii=False)[:2000]}</small></div>", unsafe_allow_html=True)

                elif stage == "preview":
                    n = resp.get("nlp_json", {})
                    add_bot("I‚Äôm ready to make the change you requested. Please review and confirm.")
                    st.session_state.pending_preview = {
                        "action": n.get("intent") if n.get("intent") in ("create","update") else "create",
                        "service": n.get("service"),
                        "entity": n.get("entity"),
                        "key_fields": n.get("key_fields"),
                        "payload": (resp.get("result") or {}).get("payload") or n.get("payload") or {}
                    }
                    st.markdown(f"<div class='preview-card'><span class='badge'>Preview</span>"
                                f"<div><b>Service:</b> {st.session_state.pending_preview['service']} &nbsp;&nbsp; "
                                f"<b>Entity:</b> {st.session_state.pending_preview['entity']}</div>"
                                f"<div><b>Payload:</b> <small class='mono'>{json.dumps(st.session_state.pending_preview['payload'], ensure_ascii=False)}</small></div>"
                                f"</div>", unsafe_allow_html=True)
                    add_bot("Should I proceed with these changes? Please say **Yes** to confirm or add more fields/values.")

                elif stage == "executed":
                    add_bot("‚úÖ Changes executed successfully.")
                else:
                    add_bot("How can I help you further?")
            else:
                # Guided mode: if user asks to update/change, we guide using selected service/entity
                if not (sel_service and sel_entity):
                    add_bot("Please select a Service and Entity from the sidebar first.")
                else:
                    # Ask for values for fields listed in registry (simulate guided collection)
                    add_bot(f"Sure. We‚Äôll work with **{sel_service} ‚Üí {sel_entity}**. Please provide the field values as `field=value`.")
                    # Try to parse simple key=value pairs from the user's text
                    payload = {}
                    for part in user_text.replace(",", " ").split():
                        if "=" in part:
                            k, v = part.split("=", 1)
                            payload[k.strip()] = v.strip()
                    if not payload:
                        add_bot("For example: `Telephone=+91-1234567, Extension=100`.")
                    else:
                        try:
                            prev = odata_post_preview("update", sel_service, sel_entity, None, payload)
                            st.session_state.pending_preview = {
                                "action": "update",
                                "service": sel_service,
                                "entity": sel_entity,
                                "key_fields": None,
                                "payload": payload
                            }
                            add_bot("Please review the preview and say **Yes** to confirm.")
                            st.markdown(f"<div class='preview-card'><span class='badge'>Preview</span>"
                                        f"<div><b>Service:</b> {sel_service} &nbsp;&nbsp; <b>Entity:</b> {sel_entity}</div>"
                                        f"<div><b>Payload:</b> <small class='mono'>{json.dumps(payload, ensure_ascii=False)}</small></div>"
                                        f"</div>", unsafe_allow_html=True)
                        except Exception:
                            friendly_error()
        except Exception:
            friendly_error()

st.markdown("</div>", unsafe_allow_html=True)
